{
  "name": "@monorepo/config",
  "version": "0.0.1",
  "private": true,
  "files": [
    "eslint/*",
    "prettier/*",
    "typescript/*"
  ],
  "scripts": {
    "format": "prettier --write \"./**/*.{cjs,js,jsx,ts,tsx,css,sass,scss}\" --config ./.prettierrc.cjs",
    "lint:fix": "eslint --fix \"./**/*.{cjs,js,jsx,ts,tsx}\"",
    "lint:staged": "lint-staged"
  },
  "lint-staged": {
    "**/*.{cjs,js,jsx,ts,tsx}": [
      "npx prettier --write",
      "npx eslint --fix"
    ],
    "**/*.{css,scss,sass}": [
      "npx prettier --write"
    ],
    "package.json": "sort-package-json"
  },
  "devDependencies": {
    "eslint": "^8.34.0",
    "prettier": "^2.8.4"
  }
}
